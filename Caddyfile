# 1. The Matrix Subdomain
# This handles the actual traffic and federation
matrix.your-domain.com {
    reverse_proxy /_matrix/* monolith:8008
}

# 2. The Root Domain
your-domain.com {
	header /.well-known/matrix/* Content-Type application/json
	header /.well-known/matrix/* Access-Control-Allow-Origin *
	respond /.well-known/matrix/server `{"m.server": "matrix.your-domain.com:443"}`
	respond /.well-known/matrix/client `{"m.homeserver": {"base_url": "https://matrix.your-domain.com"}}`
}
